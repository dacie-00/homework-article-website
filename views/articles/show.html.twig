{% extends "partials/_base.html.twig" %}

{% block title %}
    {% if article %}
        {{ article.title }}
    {% else %}
        Article not found
    {% endif %}
{% endblock %}
{% block content %}

    {% if article %}
        <div class="w-1/2 max-w-4xl bg-gray-800 m-4 px-8 py-4 rounded-md">
            <h1 class="text-gray-300 text-center text-4xl py-2">{{ article.title }}</h1>
            <p class="text-gray-400 text-xl py-2 whitespace-break-spaces">{{ article.content }}</p>
            <p class="text-gray-500">Created on {{ article.createdAt|date }}, Updated on {{ article.updatedAt|date }}</p>
            <div class="flex items-stretch w-full justify-between pt-4">
                <form action="/articles/{{ article.id }}/edit" method="get">
                    <input class="focus:ring-4 focus:outline-none border border-blue-700 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 border-blue-500 text-blue-500 hover:text-white hover:bg-blue-500 focus:ring-blue-800" type="submit" value="Edit article">
                </form>
                <form action="/articles/{{ article.id }}" method="post">
                    <input class="focus:ring-4 focus:outline-none border border-red-700 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 border-red-500 text-red-500 hover:text-white hover:bg-red-500 focus:ring-red-800" type="submit" value="Delete article">
                    <input type="hidden" name="_method" value="delete"><br>
                </form>
            </div>
        </div>
    {% else %}
        <p class="text-gray-300 text-2xl py-2">
            Article not found.
        </p>
    {% endif %}
{% endblock %}