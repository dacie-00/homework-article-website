{% extends "partials/_base.html.twig" %}

{% block title %}
    {% if article %}
        {{ article.title }}
    {% else %}
        Article not found
    {% endif %}
{% endblock %}
{% block content %}
    {% if article %}
        <p>Created at {{ article.createdAt|date }}, Updated at {{ article.updatedAt|date }}</p>
        <h1>{{ article.title }}</h1>
        <p>{{ article.content }}</p>
        <form action="/articles/{{ article.id }}" method="post">
            <input type="hidden" name="_method" value="delete"><br>
            <input type="submit" value="Delete article">
        </form>
        <form action="/articles/{{ article.id }}/edit" method="get">
            <input type="submit" value="Edit article">
        </form>
    {% else %}
        <p>Article not found.</p>
    {% endif %}
{% endblock %}